<include file="Public:doctype"/>
<html lang="en">
<head>
    <include file="Public:baseHead"/>
</head>
<body>

<include file="Public:nav"/>

<div class="rightinfo">

    <div class="tools">
        <ul class="toolbar">
            <li><a href="javascript:delMut('{:U("User/doDel")}')"><span><img src="__PUBLIC__/Admin/images/t03.png" /></span>删除</a></li>
        </ul>
    </div>

    <table class="tablelist">
        <thead>
        <tr>
            <th width="60"><label><input type="checkbox" class="selectAll" />全选</label></th>
            <th class="ft">用户头像</th>
            <th width="200">用户昵称</th>
            <th>操作</th>
        </tr>
        </thead>

        <tbody>
        <foreach name="list" item="vo">
            <tr>
                <td><input name="wx_id" class="del_checkbox" type="checkbox" value="{$vo.wx_id}" /></td>
                <td class="ft"><img class="wximg" src="{$vo.headimgurl}"/></td>
                <td>
                    {$vo.user_name}
                </td>
                <td>
                    <a href="{:U('User/view',array('wx_id'=>$vo['user_id']))}" class="tablelink">查看</a>
                    <span>|</span>
                    <a class="delBtn tablelink" href="{:U('User/doDel',array('ids'=>$vo['user_id']))}" del_title="{$vo.user_name}" >删除</a>
                    <span>
                </td>
            </tr>
        </foreach>
        </tbody>
    </table>

    <div class="pagin">
        {$page}
    </div>

</div>

<script type="text/javascript">
    $('.tablelist tbody tr:odd').addClass('odd');
</script>
</body>
</html>