<include file="Public:doctype"/>
<html lang="en">
<head>
    <include file="Public:baseHead"/>
</head>
<body>

<include file="Public:nav"/>

<div class="rightinfo">

    <div class="tools">
        <ul class="toolbar">
            <li><a href="{:U('Admin/add')}"><span><img src="__PUBLIC__/Admin/images/t01.png" /></span>添加</a></li>
            <li><a href="javascript:delMut('{:U("Admin/doDel")}')"><span><img src="__PUBLIC__/Admin/images/t03.png" /></span>删除</a></li>
        </ul>
    </div>

    <table class="tablelist">
        <thead>
        <tr>
            <th width="60"><label><input type="checkbox" class="selectAll" />全选</label></th>
            <th class="ft">管理员账号</th>
            <th width="300">是否有效</th>
            <th>操作</th>
        </tr>
        </thead>

        <tbody>
        <foreach name="list" item="vo">
            <tr>
                <td><input name="aid" type="checkbox" class="del_checkbox" value="{$vo.aid}" /></td>
                <td class="ft">{$vo.aname}</td>

                <td>
                    <eq name="vo['valid']" value="1">是
                    <else/>否
                    </eq>
                </td>
                <td>
                   
                    <a class="delBtn tablelink" href="{:U('Admin/doDel',array('ids'=>$vo['aid']))}" del_title="{$vo.aname}" >删除</a>
                    <span>|</span>
                    <a href="{:U('Admin/pwd',array('aid'=>$vo['aid']))}" class="tablelink">重置密码</a>
                </td>
            </tr>
        </foreach>
        </tbody>
    </table>

    <div class="pagin">
       {$page}
    </div>

</div>

<script type="text/javascript">
    $('.tablelist tbody tr:odd').addClass('odd');
</script>
</body>
</html>