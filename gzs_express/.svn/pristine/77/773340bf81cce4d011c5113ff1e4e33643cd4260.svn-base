<include file="Public:doctype"/>
<html lang="en">
<head>
    <include file="Public:baseHead"/>
</head>
<body>
<include file="Public:nav"/>

<div class="formbody">

    <div class="formtitle"><span>{$title}</span></div>

    <div class="tab mt10" id="tabid1">
        <form class="mainform" method="post" action="{:U('Admin/doPwd')}">
            <input type="hidden" name="aid" value="{$model.aid}"/>
            <table class="formtable">
                <tbody>

                <tr id="" class="">
                    <td class="ft_title">管理员账号</td>

                    <td colspan="3">
                        <label>{$model.aname|default="cs"}</label>
                    </td>
                </tr>

                <tr id="" class="">
                    <td class="ft_title">密码</td>
                    <td colspan="3">
                        <input value="{$conf.serverName}" datatype="*3-18" name="pwd" maxlength="18" class="bds inp  w500" nullmsg="请填写密码（必填）" placeholder="请填写密码（必填）" type="password">
                        <font class="need show_0">*</font><span class="Validform_checktip">请填写密码（必填）</span>
                    </td>
                </tr>
                <tr id="" class="">
                    <td class="ft_title">确认密码</td>
                    <td colspan="3">
                        <input datatype="*3-18" recheck="pwd" maxlength="18" class="bds inp  w500" nullmsg="请再次输入密码（必填）" placeholder="请再次输入密码（必填）" type="password">
                        <font class="need show_0">*</font><span class="Validform_checktip">请再次输入密码（必填）</span>
                    </td>
                </tr>


                <tr>
                    <td></td>
                    <td colspan="3">
                        <input type="submit" value="保存" class="btn button_primary btnsave" status="0">
                        <input type="button" value="返回" class="btn button_success btnsave" onclick="javascript:history.go(-1)" />
                    </td>
                </tr>

                </tbody>
            </table>
        </form>
    </div>
    <include file="Public:validformScript"/>
    <div class="h10"></div>
</div>
</body>
</html>